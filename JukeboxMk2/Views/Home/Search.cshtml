@model IEnumerable<JukeboxMk2.Models.Song>

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<form asp-controller="home" asp-action="Search">
    <input type="text" name="name" placeholder="Song name" />
    <button class="btn btn-primary" value="hello" text="submit">Search</button>
</form>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>@Html.DisplayNameFor(model => model.Length) (s)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                    @Html.HiddenFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.ActionLink("Add", "AddSong", new { id = item.Id, title = item.Title })
                </td>
            </tr>
        }
    </tbody>
</table>
